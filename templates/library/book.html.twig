{% extends 'base.html.twig' %}

{% block title %}{{book.name}}{% endblock %}

{% block body %}

<div class="content">
    <div>
        <h1>{{book.name}}</h1>
        <p> By {{book.author}}</p>
    </div>
    <div>
        <h2>About: </h2>
        <p>{{book.about}}</p>
    </div>
    <img src="https://barcodeapi.org/api/{{book.isbn}}" alt="ISBN">
    <a href="../update/{{book.id}}" class="btn">Edit Book</a>
    <a href="../delete/{{book.id}}" class="btn">Delete Book</a>
</div>
{% endblock %}
