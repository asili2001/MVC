{% extends 'base.html.twig' %}

{% block title %}Delete {{book.name}}{% endblock %}

{% block body %}

<div class="content">
    <h1>Are you sure you want to delete "{{book.name}}"?</h1>
    <form method="post">
        <input type="submit" value="Yes" class="btn">
        <a href="/library/book/{{book.id}}" class="btn">No</a>
    </form>

</div>
{% endblock %}
